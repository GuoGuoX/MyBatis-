<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="mybatis.dynamicSQL.dao.UserMapperDynamicSql">
    


    <!-- 动态sql_if判断 -->
    <select id="selectUserByUser1"  resultType="mybatis.dynamicSQL.bean.User"  parameterType="mybatis.dynamicSQL.bean.User" >
        select * from mybatis where
        <if test="id!=null">
            id = #{id}
        </if>
        <if test="userName!=null and userName!=''">
            and user_name = #{userName}
        </if>
        <if test="age!=null">
            and age = #{age}
        </if>
        <if test="gender==0 or gender ==1">
            and gender = #{gender}
        </if>
    </select>
</mapper>